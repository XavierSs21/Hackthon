{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "types": ["vite/client"],

    "allowJs": true,     // porque tienes .js en src
    "skipLibCheck": true,
    "strict": false,

    "noEmit": true       // <- evita que tsc intente escribir .js
  },
  "include": ["src", "env.d.ts"],
  "exclude": ["mcp-bridge*.js"]
}
