{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },

    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "types": ["vite/client", "node"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true
  },
  "include": ["src", "env.d.ts"]
}
